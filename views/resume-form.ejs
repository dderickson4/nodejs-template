<script>

function initfields () {

    $("#dtStartDate").val(getFormattedDate(new Date()));
    $("#dtEndDate").val(getFormattedDate(new Date()));

}
$(function() {

    $( ".datepicker" ).datepicker();
    initfields();


<% if (formdata) { if (formdata.length > 0) { %>
    $("#dtStartDate").val("<%=formdata[0].dtStartDate%>");
    $("#dtEndDate").val("<%=formdata[0].dtEndDate%>");
    $("#Company").val("<%=formdata[0].Company%>");
    $("#Position").val("<%=formdata[0].Position%>");
    $("#Description").val("<%=formdata[0].Description%>");
    $("#Reason").val("<%=formdata[0].Reason%>");


<% } else { %>
    $("#reset").click();
<% } }%>
});

function getFormattedDate(date) {
    var day = date.getDate();
    var month = date.getMonth() + 1;
    var year = date.getFullYear().toString();
    return year + '' + month + '' + day;
}

function formatTime(date) {
  var hours = date.getHours();
  var minutes = date.getMinutes();
  var ampm = hours >= 12 ? 'pm' : 'am';
  hours = hours % 12;
  hours = hours ? hours : 12; // the hour '0' should be '12'
  minutes = minutes < 10 ? '0'+minutes : minutes;
  var strTime = hours + ':' + minutes + ' ' + ampm;
  return strTime;
}
</script>



